<resources>

    <style name="AppTheme" parent="Base.V0.AppTheme"/>

    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimaryDark">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="ModelSelection.Title" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/model_selection_title</item>
        <item name="android:textSize">36sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ModelSelection.Subtitle" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/model_selection_subtitle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ModelSelection.About" parent="TextAppearance.AppCompat">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/model_selection_about_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/model_selection_about_horizontal_padding</item>
        <item name="android:drawablePadding">@dimen/model_selection_about_drawable_padding</item>
        <item name="android:textColor">@color/model_selection_about</item>
        <item name="android:text">@string/model_selection_about</item>
    </style>

    <style name="ModelSelection.Message" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/model_selection_message</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ModelSelection.Item.Name" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textColor">@color/model_selection_item_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ModelSelection.Item.Info" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/model_selection_item_info</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">@dimen/model_selection_item_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/model_selection_item_text_horizontal_padding</item>
    </style>

    <style name="ModelSelection.Item.Description" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/model_selection_item_description</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minLines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">@dimen/model_selection_item_text_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/model_selection_item_text_horizontal_padding</item>
    </style>

    <style name="ModelSelection.Item.Download" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:text">@string/model_selection_item_download</item>
        <item name="android:textColor">@color/model_selection_item_download</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/model_selection_item_download_background</item>
        <item name="android:paddingLeft">@dimen/model_selection_item_download_padding_left</item>
        <item name="android:paddingRight">@dimen/model_selection_item_download_padding_right</item>
        <item name="android:drawablePadding">@dimen/model_selection_item_download_drawable_padding
        </item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="About.Title" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/about_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="About.Description" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/about_description</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:padding">@dimen/about_description_padding</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="About.Privacy" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/about_privacy</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/about_privacy_margin_top</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Toolbar.TextAppearance.Title</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Navigation"
           parent="Widget.AppCompat.Toolbar.Button.Navigation">
    </style>

    <style name="AppTheme.Toolbar.TextAppearance.Title"
           parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Toolbar.Button.Flat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Override default style from library -->
    <style name="Dragonfly.Lens.Label" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/dragonfly_lens_label_text_color</item>
        <item name="android:textSize">@dimen/dragonfly_lens_label_text_size</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">@dimen/dragonfly_lens_label_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/dragonfly_lens_label_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/dragonfly_lens_label_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/dragonfly_lens_label_horizontal_padding</item>
        <item name="android:layout_marginTop">@dimen/dragonfly_lens_label_margin_top</item>
    </style>

    <style name="ChipView.Text" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">#8a000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ChipView.Item" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:background">@drawable/chip_selector_background</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/chip_selector_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Feedback.Result.Title" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/feedback_result_title</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Feedback.Result.UnderRevision" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/feedback_result_under_revision</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Feedback.Result.Others" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/feedback_others</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Feedback.Result.MoreInfo" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/feedback_more_info</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Feedback.Form.Title" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/feedback_form_title</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Feedback.Form.Others" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">@color/feedback_form_others</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Feedback.Form.ChipView" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:background">@drawable/chip_feedback_form_selector_background</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/chip_feedback_form_selector_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Feedback.Form.Hint" parent="Feedback.Form.Others"/>

    <style name="Feedback.Form.Input" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Feedback.Form.CancelButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/feedback_form_cancel</item>
        <item name="android:paddingLeft">@dimen/feedback_form_buttons_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/feedback_form_buttons_horizontal_padding</item>
    </style>

    <style name="Feedback.Form.ConfirmButton" parent="Feedback.Form.CancelButton">
        <item name="android:textColor">@drawable/confirm_button_selector</item>
    </style>

</resources>
