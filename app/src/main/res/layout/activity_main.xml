<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciandt.dragonfly.example.MainActivity">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        tools:text="Hello World!"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/info"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        tools:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/image"
        android:text="@string/wait"
        android:textAlignment="center"/>

    <Button android:id="@+id/inferFromAssetsModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/results"
            android:layout_centerHorizontal="true"
            android:text="From Assets"/>

    <Button android:id="@+id/inferFromCopiedModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inferFromAssetsModel"
            android:layout_centerHorizontal="true"
            android:text="From Copied"/>

</RelativeLayout>
