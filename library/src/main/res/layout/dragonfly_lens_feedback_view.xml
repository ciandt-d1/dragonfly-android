<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <ImageView android:id="@+id/previewImageView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:contentDescription="@string/lens_content_description_captured_image"
               android:scaleType="centerCrop"/>

    <ImageView android:id="@+id/dragonflyLensOrnamentView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_centerInParent="true"
               android:importantForAccessibility="no"
               android:scaleType="center"
               android:visibility="gone"
               tools:src="@android:drawable/ic_menu_camera"
               tools:tint="@android:color/white"
               tools:visibility="visible"/>

    <TextView android:id="@+id/dragonflyLensLabelView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Dragonfly.Lens.Label"
              android:background="@drawable/dragonfly_label_background"
              android:layout_gravity="center"
              android:visibility="gone"
              tools:text="Hammer 25%"
              tools:visibility="visible"/>
</merge>
