<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:parentTag="android.widget.RelativeLayout">

    <ImageView android:id="@+id/previewImageView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:contentDescription="@string/lens_content_description_captured_image"
               android:scaleType="centerCrop"/>

    <ImageView android:id="@+id/dragonflyLensOrnamentView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_centerInParent="true"
               android:importantForAccessibility="no"
               android:scaleType="center"
               android:visibility="gone"
               tools:src="@android:drawable/ic_menu_camera"
               tools:tint="@android:color/white"
               tools:visibility="visible"/>

    <LinearLayout
        android:id="@+id/dragonflyLensLabelsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"/>
</merge>
