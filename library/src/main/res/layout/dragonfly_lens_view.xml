<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <com.ciandt.dragonfly.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView android:id="@+id/ornamentView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_centerInParent="true"
               android:importantForAccessibility="no"
               android:scaleType="center"
               android:visibility="gone"
               tools:src="@android:drawable/ic_menu_camera"
               tools:tint="@android:color/white"
               tools:visibility="visible"/>

    <TextView android:id="@+id/labelView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Dragonfly.Lens.Label"
              android:background="@drawable/dragonfly_label_background"
              android:layout_gravity="center"
              android:visibility="gone"
              tools:text="Hammer 25%"
              tools:visibility="visible"/>

    <ImageButton android:id="@+id/btnSnapshot"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="@dimen/dragonfly_lens_snapshot_button_margin_bottom"
                 android:layout_gravity="bottom|center_horizontal"
                 android:src="@android:drawable/ic_menu_camera"
                 android:visibility="visible"
                 tools:visibility="visible"/>
</merge>
