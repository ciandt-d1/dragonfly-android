<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/dragonfly_lens_view_background">

    <com.ciandt.dragonfly.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView android:id="@+id/ornamentView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_centerInParent="true"
               android:scaleType="center"
               android:visibility="gone"
               tools:src="@android:drawable/ic_menu_camera"
               tools:tint="@android:color/white"
               tools:visibility="visible"/>

    <TextView android:id="@+id/labelView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Dragonfly.Lens.Label"
              android:background="@drawable/rounded_corner"
              android:layout_gravity="center"
              android:visibility="gone"
              tools:text="Hammer 25%"
              tools:visibility="visible"/>
</merge>
