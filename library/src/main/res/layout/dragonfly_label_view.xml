<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       tools:parentTag="android.widget.LinearLayout">

    <TextView android:id="@+id/labelTextView"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              style="@style/Dragonfly.Lens.Label"
              android:background="@drawable/dragonfly_label_background"
              tools:text="Hammer"
              tools:visibility="visible"/>

    <TextView android:id="@+id/percentageTextView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              style="@style/Dragonfly.Lens.Label.Percentage"
              android:background="@drawable/dragonfly_label_background"
              tools:text="100%"
              tools:visibility="visible"/>

</merge>